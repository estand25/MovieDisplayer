<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    card_view:cardCornerRadius="3dp"
    card_view:cardUseCompatPadding="true"
    card_view:cardElevation="10dp">
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/detail_imageView"
                android:scaleType="centerCrop"
                android:minHeight="150dp"
                android:adjustViewBounds="true"
                android:layout_margin="0dp"
                android:layout_gravity="left"
                android:layout_weight="1"
                android:padding="10dp"/>
            <TableRow
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_weight="2">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/detail_titleTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:adjustViewBounds="true"
                        android:layout_margin="0dp"
                        android:gravity="left|top"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_weight="1"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:id="@+id/detail_UserRateingLayout">
                        <TextView
                            android:id="@+id/detail_UserRateingTextView"
                            android:layout_width="55dp"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            android:layout_margin="0dp"
                            android:gravity="left"
                            android:textSize="15sp"
                            android:layout_gravity="left"/>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/detail_releaseDateTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="0dp"
                        android:adjustViewBounds="true"
                        android:layout_margin="0dp"
                        android:gravity="left"
                        android:textSize="15sp"
                        android:layout_gravity="left"/>
                    <TextView
                        android:id="@+id/detail_genreTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="0dp"
                        android:adjustViewBounds="true"
                        android:layout_margin="0dp"
                        android:gravity="left"
                        android:textSize="15sp"
                        android:layout_gravity="left"/>
                </LinearLayout>
            </TableRow>
        </TableRow>
    </TableLayout>
    <TextView
        android:id="@+id/detail_synopsisTextView"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:gravity="left"
        android:textSize="15sp"
        android:fontFamily="sans-serif-condensed"/>
    </TableLayout>
</android.support.v7.widget.CardView>