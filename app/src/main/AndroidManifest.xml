<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
package="com.example.andriod.popularmoviev2">

<uses-permission android:name="android.permission.AUTHENTICATE_ACCOUNTS" />
<uses-permission android:name="android.permission.INTERNET" />
<uses-permission android:name="android.permission.READ_SYNC_SETTINGS"/>
<uses-permission android:name="android.permission.WRITE_SYNC_SETTINGS"/>
<uses-permission android:name="android.permission.WAKE_LOCK"/>

<application
    android:allowBackup="true"
    android:icon="@mipmap/material_icons"
    android:label="@string/app_name"
    android:supportsRtl="true"
    android:theme="@style/AppTheme">
    <activity
        android:name=".activity.MainActivity"
        android:theme="@style/MovieListStyle"
        android:label="@string/app_name">
        <intent-filter>
            <action android:name="android.intent.action.MAIN" />
            <category android:name="android.intent.category.LAUNCHER" />
        </intent-filter>
    </activity>
    <activity
        android:name=".activity.SettingActivity"
        android:label="@string/title_activity_settings"
        android:parentActivityName=".activity.MainActivity">
        <meta-data
            android:name="android.support.PARENT_ACTIVITY"
            android:value=".activity.MainActivity" />
    </activity>
    <activity
        android:name=".activity.DetailActivity"
        android:label="@string/title_activity_detail"
        android:parentActivityName=".activity.MainActivity">
        <meta-data
            android:name="android.support.PARENT_ACTIVITY"
            android:value=".activity.MainActivity" />
    </activity>
    <provider
        android:authorities = "com.example.andriod.popularmoviev2"
        android:name=".data.MovieProvider"
        android:exported="false"
        android:syncable="true" />

    <!-- SyncAdapter's dummy authentication service -->
    <service android:name=".sync.MovieAuthenticatorService">
        <intent-filter>
            <action android:name="android.accounts.AccountAuthenticator" />
        </intent-filter>
        <meta-data
            android:name="android.accounts.AccountAuthenticator"
            android:resource="@xml/authenticator" />
    </service>

    <service
        android:name=".service.PopularMovieService"
        android:exported="false" />
    <service
        android:name=".service.TopRatedMovieService"
        android:exported="false" />
    <service
        android:name=".service.FavoriteMovieService"
        android:exported="false" />
    <service
        android:name=".service.GenreInfoService"
        android:exported="false" />
    <service
        android:name=".service.GenreDecodeService"
        android:exported="false" />
    <service
        android:name=".service.ReviewInfoService"
        android:exported="false" />
    <service
        android:name=".service.TrailerInfoService"
        android:exported="false" />
    <service
        android:name=".service.PopulateAllMovies"
        android:exported="false" />
    <receiver
        android:name=".StarterReceiver"
        android:exported="false" />

    <!-- The SyncAdapter service -->
    <service
        android:name=".sync.MovieSyncService"
        android:exported="false"
        >
        <intent-filter>
            <action android:name="android.content.SyncAdapter" />
        </intent-filter>
        <meta-data
            android:name="android.content.SyncAdapter"
            android:resource="@xml/syncadapter" />
    </service>
</application>

</manifest>